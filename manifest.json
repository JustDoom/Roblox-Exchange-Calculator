{
  "manifest_version": 3,
  "name": "Robux Worth Counter",
  "description": "Displays how much money worth of robux you have using the DexEx rate",
  "version": "2.0.0",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.roblox.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; connect-src 'self' https://economy.roblox.com https://cdn.jsdelivr.net"
  },
  "host_permissions": [
    "https://economy.roblox.com/*",
    "https://cdn.jsdelivr.net/npm/@fawazahmed0/currency-api@latest/v1/currencies/usd.min.json"
  ]
}