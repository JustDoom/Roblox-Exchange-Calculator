{
  "manifest_version": 2,
  "name": "Robux Worth Counter",
  "description": "Display how much money worth of robux you have!",
  "version": "2.0.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "https://api.roblox.com/currency/balance"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.roblox.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}