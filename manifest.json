{
  "manifest_version": 2,
  "name": "Robux Worth Counter",
  "description": "Displays how much money worth of robux you have using the DexEx rate",
  "version": "2.0.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "https://economy.roblox.com/v1/user/currency",
    "https://cdn.jsdelivr.net/npm/@fawazahmed0/currency-api@latest/v1/currencies/usd.min.json"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.roblox.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}